{
  "include": [
    "resources/scripts/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./resources/scripts/*"
      ]
    },
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es5",
      "es2015"
    ],
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true
  }
}